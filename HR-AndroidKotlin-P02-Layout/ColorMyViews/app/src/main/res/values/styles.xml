<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_box">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/box_one_se</item>
        <item name="android:layout_marginEnd">@dimen/box_one_se</item>
        <item name="android:layout_marginTop">@dimen/box_one_se</item>
        <item name="android:background">@color/box_dark_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/box_dark_color</item>
        <item name="android:textSize">@dimen/box_text_size</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
