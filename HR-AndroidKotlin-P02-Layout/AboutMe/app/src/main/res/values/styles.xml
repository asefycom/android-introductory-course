<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textview_style">
        <item name="android:padding">@dimen/main_tv_padding</item>
        <item name="android:layout_margin">@dimen/main_tv_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_tv_size</item>
    </style>

    <style name="textvie_body">
        <item name="android:textColor">@color/tv_body</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/tv_body</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

</resources>
